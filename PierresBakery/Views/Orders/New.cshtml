<!DOCTYPE html>
<html>

<head>
  <title>New Order with @Model.Name - Pierre's Bakery</title>
  <link rel="stylesheet" href="~/css/styles.css">
</head>


<body>
  @await Html.PartialAsync("Header")

  <div class="centerAlignBody">
    <h1>Place a new order at @Model.Name:</h1>

    <form action="/vendors/@Model.Id/orders" method="post">
      <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
      <div id="newOrderForm">
        <h3>New Order Form</h3>

        <label for="orderTitle">Order Title<span class="requiredField">*</span></label><br />
        <input id="orderTitle" name="orderTitle" type="text" required>
        <br />
        <br />

        <label for="orderDescription">Order Description<span class="requiredField">*</span></label><br />
        <input id="orderDescription" name="orderDescription" type="text" required>
        <br />
        <br />

        <label for="orderPrice">Order Price<span class="requiredField">*</span></label><br />
        <input id="orderPrice" name="orderPrice" type="number" min=1 required>
        <br />
        <br />

        <button type="submit">Place Order</button>

      </div>
    </form>


    <br /><br /><br />
    <a href='/vendors/@Model.Id'><button>Return to @Model.Name</button></a>
    <br /><br />
    <a href="/vendors"><button>Back to All Vendors</button></a><br />
  </div>
</body>

</html>